DEVICE=ens1f1
INTERFACE_SPEED=10Mbit

DIAMOND_SERVERS="128.2.212.184 128.2.212.185 128.2.212.186 128.2.212.187 128.2.212.188 128.2.212.189 128.2.212.190 128.2.212.191"
S2C_PORT=6177
H2C_PORT=6101


interface $DEVICE cmu bidirectional rate $INTERFACE_SPEED minrate 10kbit

  class scout min $SCOUT2SCOUT_SPEED max $SCOUT2SCOUT_SPEED
     match output dst "$DIAMOND_SERVERS"

  class client min $SCOUT2CLIENT_SPEED max $SCOUT2CLIENT_SPEED qdisc netem options "delay $SCOUT2CLIENT_DELAY"
    match tcp ports "$S2C_PORT","$H2C_PORT"
